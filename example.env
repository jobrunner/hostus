# Hostus Configuration
# Copy this file to .env and adjust values as needed

# Server port
PORT=8080

# Hostname for TLS certificate
HOST_NAME=localhost

# Enable HTTPS with automatic Let's Encrypt certificates
ENABLE_TLS=false

# Allowed CORS origins (comma-separated, or * for all)
CORS_ORIGINS=*

# Rate limit: maximum requests per second
RATE_LIMIT=100

# Load shedding: consecutive GBIF errors before activating circuit breaker
UPSTREAM_ERROR_THRESHOLD=5

# Load shedding: seconds to wait before retrying after circuit breaker activates
UPSTREAM_BACKOFF_SECONDS=30

# Cache TTL: seconds to keep search results in memory
CACHE_TTL_SECONDS=300

# Log level: debug, info, warn, error
LOG_LEVEL=info

# GBIF API base URL (usually no need to change)
GBIF_BASE_URL=https://api.gbif.org/v1

# GBIF request timeout in seconds
GBIF_TIMEOUT_SECONDS=10

# Overall request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30
